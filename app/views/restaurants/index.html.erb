  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h2>Restaurants</h2>
            </div>
        </div>
        <!-- /.row -->
<div class="input-group"> <span class="input-group-addon">Search Restaurants</span>

    <input id="filter" type="text" class="form-control" placeholder="Type Restaurant name, Type of food..."> </br>
</div>
<br></br>
        <!-- Page Features -->
          <% @restaurants.each do |restaurant| %>
	   <div id="searchable">
         <div class="col-md-3 col-sm-6 hero-feature">
         <div class="thumbnail">
           <%= image_tag("1.jpg", :alt => "") %>
           <div class="caption">
                        <h4><%= link_to "#{restaurant.name}", restaurant_path(restaurant) %></h4>
                        <h5>Type of food: <%= restaurant.description %></h5>
       			<h5>Hours: <%= restaurant.service_hours %></h5>
       			<h5>Telephone: <%= restaurant.telephone %></h5>
                        <p>
                            <a href=<%= restaurant_path(restaurant)%> class="btn btn-default">View Menu</a>
                        </p>
                    </div>
                </div>
            </div>
	  </div>
              <% end %>
      
