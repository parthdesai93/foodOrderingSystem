<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4> <Strong> <%= menu_item.name %> </Strong> </h4>
    </div>
    <div class="col-xs-4">


      <%= form_for order_item, remote: true do |f| %>
          <div class="row">
            <div class="col-xs-4">
              <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
              <%= f.hidden_field :menu_item_id, value: menu_item.id %>
              <p> <small> $ <%=  menu_item.price * order_item.quantity %>  </small> </p>
            </div>
            <div class="col-xs-8 text-right">
              <div class="btn-group">
                <%= f.submit "Update Quantity", class: "btn btn-primary btn-block" %>
                <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the menu_item '#{order_item.menu_item.name}' from your cart?" }, method: :delete, remote: true, class: "btn btn-danger btn-block" } %>
              </div>
            </div>
          </div>
      <% end %>

    </div>

  </div>
</div>